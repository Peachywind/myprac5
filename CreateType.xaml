<Window x:Class="budget.CreateType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateType" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <Grid Height="252" Width="341">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Создать тип заметки" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <Label Content="Название типа:" Margin="0,0,10,0" VerticalAlignment="Center" />
            <TextBox x:Name="type_text" Width="200" Height="26" VerticalAlignment="Center" />
        </StackPanel>

        <Button x:Name="addType" Content="Создать" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,113,0,0" Padding="20,5" Click="addType_Click" Grid.Row="1" />
    </Grid>
</Window>
